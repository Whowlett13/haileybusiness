        <option value="Notre-Dame-de-l'Île-Perrot">Notre-Dame-de-l'Île-Perrot</option>
        <option value="Beauharnois">Beauharnois</option>
        <option value="Kirkland">Kirkland</option>
        <option value="Hawkesburry">Hawkesburry</option>
      </select>
    </div>
    <label for="dayOfWeek">Date:</label><div class="fields">
      <select id="day" name="Date" required>
        <option value="Select a Day" disabled selected>Select a day</option>
        <option value="monday">Monday</option>
        <option value="tuesday">Tuesday</option>
        <option value="wednesday">Wednesday</option>
        <option value="thursday">Thursday</option>
        <option value="friday">Friday</option>
      </select>
    </div>
    <label for="time">Time:</label><div class="fields">
      <select id="time" name="Time" required>
        <option value="Select a time" disabled selected>Select a time</option>
        <option value="8:00">8:00 AM</option>
        <option value="9:00">9:00 AM</option>
        <option value="10:00">10:00 AM</option>
        <option value="11:00">11:00 AM</option>
        <option value="12:00">12:00 AM</option>
        <option value="13:00">1:00 PM</option>
        <option value="14:00">2:00 PM</option>
        <option value="15:00">3:00 PM</option>
        <option value="16:00">4:00 PM</option>
        <option value="17:00">5:00 PM</option>
      </select>
    </div>

    <div class="wrap">
